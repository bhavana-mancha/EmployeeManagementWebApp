@{
    ViewData["Title"] = "Employee Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        /* Header Styling */
        .header {
            background-color: #333;
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
        }

        /* Navigation Bar */
        .navbar {
            display: flex;
            justify-content: center;
            background-color: #555;
            padding: 10px 0;
        }

        .navbar a {
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            font-size: 18px;
            transition: 0.3s;
        }

        .navbar a:hover {
            background-color: #777;
            border-radius: 5px;
        }

        /* Main Content */
        .content {
            padding: 20px;
            text-align: center;
        }

        /* Button Styling */
        .button-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 20px;
        }

        .button-container button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 12px 20px;
            margin: 10px;
            font-size: 18px;
            cursor: pointer;
            width: 250px;
            border-radius: 5px;
            transition: 0.3s;
        }
        .alert-message {
    position: fixed;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    color: rgb(17, 14, 14);
    padding: 15px 25px;
    border-radius: 8px;
    font-size: 16px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    text-align: center;
    z-index: 1000;
    opacity: 1;
    transition: opacity 0.5s ease-in-out;
}


        .button-container button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

    <div class="header">Employee Management Application</div>

    <div class="navbar">
        <a href="/Employee/Home">Home</a>
        <a href="/Employee/Empdetails">Employees List</a>
        <a href="/Home/Index">Logout</a>
    </div>

    <div class="content">
        <h2>Manage Employees</h2>
       

        <div class="button-container">
            <button onclick="location.href='/Employee/Create'">‚ûï Add an Employee</button>
            <button onclick="location.href='/Employee/SearchById'">üîç Search Employee by ID</button>
            <button onclick="location.href='/Employee/UpdateSearch'">‚úèÔ∏è Update Employee Details</button>
            
        </div>
    </div>
@if (TempData["SuccessMessage"] != null)
{
    <div id="success-alert" class="alert-message">
        @TempData["SuccessMessage"]
    </div>
}

</body>
<script>
    setTimeout(function () {
        var alertBox = document.getElementById("success-alert");
        if (alertBox) {
            alertBox.style.transition = "opacity 0.5s";
            alertBox.style.opacity = "0";
            setTimeout(() => alertBox.remove(), 500);
        }
    }, 3000);
</script>

</html>

