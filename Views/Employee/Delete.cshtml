@model EmployeeManagementApp.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background: white;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 450px;
            text-align: center;
        }

        h2 {
            color: #dc3545;
        }

        p {
            font-size: 16px;
            font-weight: bold;
            color: #ff9800;
            margin-bottom: 20px;
        }

        .card {
            background: #ffffff;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        dl {
            text-align: left;
            margin-top: 15px;
        }

        dt {
            font-weight: bold;
            color: #343a40;
        }

        dd {
            margin-bottom: 10px;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .btn {
            padding: 10px 15px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            transition: 0.3s;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn:hover {
            opacity: 0.85;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Delete Employee</h2>
        <p>Are you sure you want to delete this employee?</p>

        <div class="card">
            <dl>
                <dt>Name:</dt>
                <dd>@Model.Name</dd>

                <dt>Email:</dt>
                <dd>@Model.Email</dd>

                <dt>Salary:</dt>
                <dd>@Model.Salary</dd>

                <dt>Years of Experience:</dt>
                <dd>@Model.YearsOfExperience</dd>

                <dt>Role:</dt>
                <dd>@Model.Role</dd>
            </dl>
        </div>

        <form asp-action="ConfirmDelete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">üóëÔ∏è Delete</button>
    <a asp-action="Home" class="btn btn-secondary">‚ùå Cancel</a>
 </form>

    </div>

</body>
</html>
